@model ClienteModel
@{
    ViewData["title"] = "Cadastrar Cliente";
}


<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tabCliente" type="button" role="tab" aria-controls="tab1" aria-selected="true">Cliente</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tabOrcamento" type="button" role="tab" aria-controls="tab2" aria-selected="false">Orçamento</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="tab3-tab" data-bs-toggle="tab" data-bs-target="#tabPedido" type="button" role="tab" aria-controls="tab3" aria-selected="false">Pedido</button>
    </li>
</ul>

<br />

<div class="tab-content" id="nav-tabContent">

    <div class="tab-pane fade show active" id="tabCliente" role="tabpanel" aria-labelledby="tab1-tab">

        <form class="bg-light p-4 rounded shadow-sm">

            <h2 class="text-left mb-4">Cadastro de cliente</h2>

            <div class="row g-2">
                <div class="col-md-12">
                    <div>
                        <label for="Nome">Nome</label>
                        <input id="Nome" asp-for="Name" placeholder="Digite o nome..." class="form-control" required="" type="text">
                    </div>
                </div>

                <div class="col-md-6">
                    <div>
                        <label class="form-label" for="Nome">CPF</label>
                        <input id="cpf" asp-for="Cpf" placeholder="Apenas números..." class="form-control " required="" type="text" maxlength="11" pattern="[0-9]+$">
                    </div>
                </div>

                <div class="col-md-6">
                    <div>
                        <label class="form-label" for="Nome">CNPJ</label>
                        <input id="Cnpj" asp-for="Cnpj" placeholder="Apenas números..." class="form-control" type="text" maxlength="11" pattern="[0-9]+$">
                    </div>
                </div>

                <div class="col-md-6">
                    <div>
                        <label class="form-label" for="prependedtext">Telefone</label>
                        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                        <input id="prependedtext" asp-for="NumTelefone1" class="form-control" placeholder="XX XXXXX-XXXX" required="" type="text" maxlength="13" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$"
                               OnKeyPress="formatar('## #####-####', this)">
                    </div>
                </div>

                <div class="col-md-6">
                    <div>
                        <label class="form-label" for="prependedtext">Telefone</label>
                        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                        <input id="prependedtext" asp-for="NumTelefone2" class="form-control" placeholder="XX XXXXX-XXXX" type="text" maxlength="13" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$"
                               OnKeyPress="formatar('## #####-####', this)">
                    </div>
                </div>

                <div class="col-md-12">
                    <label class="form-label" for="prependedtext">E-mai</label>
                    <div>
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input id="prependedtext" asp-for="Email" class="form-control" placeholder="email@email.com" type="email">
                    </div>
                    <br /><br /><br />
                </div>

                <!--Endereço-->
                <h2 class="text-left mb-4">Endereço</h2>

                <div class="col-md-6">
                    <label class="form-label" for="CEP">CEP <h11>*</h11></label>
                    <div>
                        <input id="cep" asp-for="Cep" placeholder="Apenas números" class="form-control" required="" value="" type="search" maxlength="8" pattern="[0-9]+$">
                    </div>
                </div>

                <div class="col-md-6">
                    <div>
                        <button type="button" class="btn btn-primary" onclick="pesquisacep(cep.value)">Pesquisar</button>
                    </div>
                </div>

                <div class="col-md-8">
                    <div>
                        <label class="form-label">Rua</label>
                        <input id="rua" asp-for="Rua" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <laabel class="form-label">Nº <h11>*</h11></laabel>
                        <input id="numero" asp-for="Numero" class="form-control" placeholder="" type="text">
                    </div>
                </div>

                <div class="col-4">
                    <div>
                        <label class="form-label">Bairro</label>
                        <input id="bairro" asp-for="Bairro" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <label class="form-label">Cidade</label>
                        <input id="cidade" asp-for="Cidade" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        <label class="form-label">Estado</label>
                        <input id="estado" asp-for="Estado" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                    </div>
                </div>
            </div>
            <br />
            <div class="col-md-8">
                <button id="Cadastrar" class="btn btn-success" type="Submit">Cadastrar</button>
                <a class="btn btn-danger" asp-controller="Cliente" asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>

    <div class="tab-pane fade" id="tabOrcamento" role="tabpanel" aria-labelledby="tab2-tab">
        <form class="row">
            <p>Conteúdo da Tab 2</p>
        </form>
    </div>

    <div class="tab-pane fade" id="tabPedido" role="tabpanel" aria-labelledby="tab3-tab">
        <p>Conteúdo da Tab 3</p>
    </div>

</div>











